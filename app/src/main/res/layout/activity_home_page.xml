<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:id="@+id/homePageLinLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/homeRelativeLayoutHeight"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_bg_round">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="@dimen/settingsIcon"
                android:layout_height="@dimen/settingsIcon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/settings_padding"
                android:layout_marginLeft="@dimen/settings_padding"
                android:layout_marginTop="@dimen/settings_padding"
                android:layout_marginEnd="@dimen/settings_padding"
                android:layout_marginRight="@dimen/settings_padding"
                android:layout_marginBottom="@dimen/settings_padding"
                android:src="@drawable/settings" />

            <ImageView
                android:layout_width="@dimen/LogoWidth"
                android:layout_height="@dimen/LogoHeight"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/logo_margin_top"
                android:contentDescription="@string/logo"
                android:src="@drawable/logo_white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/travelGuideCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardViewHeight"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_10dp"
                    android:background="@drawable/cardview_bg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/cardview_bg_white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/travelGuidePageImage"
                            android:layout_height="@dimen/travelGuidePageImage"
                            android:layout_gravity="center|bottom"
                            android:layout_marginTop="@dimen/image_margin_bottom_20dp"
                            android:layout_marginBottom="@dimen/margin_25dp"
                            android:src="@drawable/options" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/travel_guide"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_24sp"
                            app:fontFamily="@font/rancho" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attractionsCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardViewHeight"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/cardview_bg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/cardview_bg_white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/attractionsPageImage"
                            android:layout_height="@dimen/attractionsPageImage"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/image_margin_bottom_30dp"
                            android:src="@drawable/pyramids" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/landmark"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_24sp"
                            app:fontFamily="@font/rancho" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/timelineCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardViewHeight"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/cardview_bg_white"
            app:cardCornerRadius="@dimen/margin_10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cardview_bg_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timelinePageImageHeight"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:contentDescription="@string/planet"
                    android:src="@drawable/timeline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="@string/timeline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_24sp"
                    app:fontFamily="@font/rancho" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>